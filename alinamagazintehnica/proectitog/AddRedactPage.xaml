<Page x:Class="proectitog.AddRedactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:proectitog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRedactPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <TextBlock>Можете изменить и редактировать данные</TextBlock>
            <TextBlock>Серийный номер</TextBlock>
            <ComboBox></ComboBox>
            <TextBlock>Фото</TextBlock>
            <TextBox Width="250"></TextBox>
            <TextBlock>Наименование</TextBlock>
            <TextBox Width="250"></TextBox>
            <TextBlock>Еденица измерения</TextBlock>
            <ComboBox></ComboBox>
            <TextBlock>Количество</TextBlock>
            <ComboBox></ComboBox>
        </StackPanel>
    </Grid>
</Page>
