<Window x:Class="alinamagazinteh.pages.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:alinamagazinteh.pages"
        mc:Ignorable="d"
        Title="okno" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="198*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="/pages/teh.jpg" ></Image>
        <Button HorizontalAlignment="Left" Height="30" Width="250" Background="Red" Grid.Row="5">🛒</Button>
        <Button Height="30" Width="50" Margin="0 0 200 0" Grid.Row="5">❤</Button>
        <Button Height="30" Width="50" Margin="40 0 100 0" Grid.Row="5 ">📃</Button>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Margin="0,0,10,0" Grid.Row="1">
            <WrapPanel x:Name="ServiceWp" Grid.Row="1">
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
